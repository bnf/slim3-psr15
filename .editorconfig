# This file is for unifying the coding style for different editors and IDEs
# editorconfig.org

root = true

[*]
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
indent_style = space
tab_width = 8
indent_size = 4

[**.php]
indent_style = space
indent_size = 4

[**.pug]
indent_style = space
indent_size = 4

[**.json]
indent_style = space
indent_size = 4

[Makefile]
indent_style = tab
indent_size = 8
